nav.menu
  ul
    li.item#list_notes(data-icon: "✪") Home
    li.item#new_note(data-icon: "+") Add
    li.item#list_notes(data-icon: "…") List
    li.item#list_notes(data-icon: "?") About
ul#notes
  - if (notes.length > 0) {
    - each note in notes
      li.note(id: "note_" + JSON.parse(JSON.stringify(note["_id"])))
        h3.title(contenteditable: "true")=note.title
        section.content(contenteditable: "true")=note.content
        section.actions
          a.delete(href: "javascript:void(0)") Delete
  - }
